<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-white">Empresas</h1>
    <%= link_to "Nova Empresa", new_company_path,
        class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm font-medium transition min-h-[44px] inline-flex items-center" %>
  </div>

  <% if @companies.any? %>
    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      <% @companies.each do |company| %>
        <div class="bg-gray-800 p-4 rounded-lg shadow border border-gray-700">
          <h3 class="text-lg font-semibold text-white"><%= company.name %></h3>
          <p class="text-blue-400 mt-2">
            R$ <%= number_with_precision(company.hourly_rate, precision: 2, delimiter: '.', separator: ',') %>/hora
          </p>
          <p class="text-sm text-gray-400 mt-2">
            Criado em <%= l(company.created_at, format: :short) %>
          </p>

          <div class="mt-4 flex gap-2">
            <%= link_to "Editar", edit_company_path(company), class: "text-blue-400 hover:text-blue-300 text-sm font-medium" %>
            <%= button_to "Desativar", company_path(company), method: :delete,
                          class: "text-red-400 hover:text-red-300 text-sm font-medium",
                          data: { turbo_confirm: "Tem certeza que deseja desativar esta empresa?" },
                          form: { class: "inline" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-gray-400 text-lg">Nenhuma empresa cadastrada.</p>
      <p class="text-gray-500 mt-2">Clique em "Nova Empresa" para cadastrar a primeira.</p>
    </div>
  <% end %>
</div>
