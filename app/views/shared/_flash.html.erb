<% if flash.any? %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <% flash.each do |type, message| %>
      <%
        bg_color = case type.to_sym
                   when :notice then "bg-green-900/50 border-green-500 text-green-200"
                   when :alert then "bg-red-900/50 border-red-500 text-red-200"
                   when :warning then "bg-yellow-900/50 border-yellow-500 text-yellow-200"
                   else "bg-blue-900/50 border-blue-500 text-blue-200"
                   end
      %>
      <div class="<%= bg_color %> border px-4 py-3 rounded mb-4 flex justify-between items-center"
           data-controller="flash"
           data-flash-target="message">
        <span><%= message %></span>
        <button data-action="click->flash#close"
                class="text-lg font-bold leading-none hover:opacity-75">
          &times;
        </button>
      </div>
    <% end %>
  </div>
<% end %>
