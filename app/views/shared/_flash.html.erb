<% if flash.any? %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <% flash.each do |type, message| %>
      <%
        bg_color = case type.to_sym
                   when :notice then "bg-green-800 border-green-700 text-green-100"
                   when :alert then "bg-red-800 border-red-700 text-red-100"
                   when :warning then "bg-yellow-800 border-yellow-700 text-yellow-100"
                   else "bg-blue-800 border-blue-700 text-blue-100"
                   end
      %>
      <div class="<%= bg_color %> border px-4 py-3 rounded mb-4 flex justify-between items-center"
           data-controller="flash"
           data-flash-target="message">
        <span><%= message %></span>
        <button data-action="click->flash#close"
                class="text-lg font-bold leading-none hover:opacity-75">
          &times;
        </button>
      </div>
    <% end %>
  </div>
<% end %>
