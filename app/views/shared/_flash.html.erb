<% if flash.any? %>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
    <% flash.each do |type, message| %>
      <%
        style = case type.to_sym
                when :notice then "background-color: #166534; border-color: #14532d; color: #dcfce7;"
                when :alert then "background-color: #991b1b; border-color: #7f1d1d; color: #fecaca;"
                when :warning then "background-color: #854d0e; border-color: #713f12; color: #fef08a;"
                else "background-color: #1e40af; border-color: #1e3a8a; color: #dbeafe;"
                end
      %>
      <div style="<%= style %>" class="border px-4 py-3 rounded mb-4 flex justify-between items-center"
           data-controller="flash"
           data-flash-target="message">
        <span><%= message %></span>
        <button data-action="click->flash#close"
                class="text-lg font-bold leading-none hover:opacity-75">
          &times;
        </button>
      </div>
    <% end %>
  </div>
<% end %>
