<%= form_with(model: project, class: "space-y-6") do |form| %>
  <% if project.errors.any? %>
    <div role="alert" class="bg-red-600 border border-red-500 text-white px-4 py-3 rounded-md">
      <h2 class="font-bold mb-2">
        <%= pluralize(project.errors.count, "erro encontrado:", "erros encontrados:") %>
      </h2>
      <ul class="list-disc list-inside space-y-1">
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, "Nome do Projeto", class: "block text-sm font-medium text-gray-300 mb-1" %>
    <%= form.text_field :name,
        required: true,
        "aria-required": "true",
        class: "mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2",
        placeholder: "Nome do projeto" %>
  </div>

  <div>
    <%= form.label :company_id, "Empresa", class: "block text-sm font-medium text-gray-300 mb-1", id: "company-label" %>
    <%= form.collection_select :company_id, @companies, :id, :name,
        { prompt: "Selecione uma empresa" },
        { required: true,
          "aria-required": "true",
          "aria-labelledby": "company-label",
          class: "mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white shadow-sm focus:border-blue-500 focus:ring-blue-500 px-3 py-2" } %>
  </div>

  <div class="flex flex-col sm:flex-row gap-3 pt-4">
    <%= form.submit "Salvar",
        class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-md text-sm font-medium transition min-h-[44px] cursor-pointer" %>
    <%= link_to "Cancelar", projects_path,
        class: "bg-gray-600 hover:bg-gray-500 text-white px-6 py-2 rounded-md text-sm font-medium transition min-h-[44px] inline-flex items-center justify-center" %>
  </div>
<% end %>
